    <%= f.label :description, "Any project details?", class: "font-medium mt-2" %>
    <%= f.text_area :description,  class: "w-full rounded bg-white focus:outline-none resize-none focus:shadow-outline border border-gray-500 p-1 my-4", placeholder: "Eg: Rebuild basecamp" %>


    <footer class="flex justify-center mt-2">
      <button type="submit" class="rounded-full p-2 text-white bg--green focus:outline-none focus:shadow-outline">
        Create this project
      </button>
    </footer>
  <% end %>

</div>