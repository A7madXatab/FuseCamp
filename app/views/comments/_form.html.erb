<%= form_for [current_user, project, commentable, commentable.comments.new] do |f|%>
  <section class="bg-white p-2 w-full my-2 border border--body rounded-lg">
    <%= f.rich_text_area :content, placeholder: 'Type your comment here' %>
  </section>
  <button type="submit" class="button__green px-3 py-2 rounded-full focus:outline-none focus:shadow-outline">Add this comment</button>
<% end %>